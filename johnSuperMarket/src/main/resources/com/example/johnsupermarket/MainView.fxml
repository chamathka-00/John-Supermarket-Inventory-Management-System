<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.johnsupermarket.controller.MainController"
            style="-fx-background-color: #f7f9fc; -fx-padding: 24, 32, 32, 32">

    <top>
        <VBox spacing="0" alignment="CENTER" style="-fx-padding: 0;">
            <HBox alignment="CENTER"
                  style="-fx-background-color: #232946; -fx-padding: 13 32; -fx-background-radius: 8 8 0 0">
                <Label text="John's Supermarket Inventory"
                       style="-fx-font-size: 34px; -fx-font-family: 'Candara', 'Segoe UI Semibold';
                       -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <HBox alignment="CENTER" spacing="18" style="-fx-background-color: #232946; -fx-padding: 18 32;">
                <Button fx:id="addItemButton" text="Add Item"
                        onAction="#handleAddItem"
                        style="-fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold', Arial; -fx-font-weight: bold; -fx-text-fill: #232946;
                               -fx-background-color: #e0e1dd; -fx-background-radius: 14px; -fx-border-radius: 14px; -fx-border-color: #e0e1dd;
                               -fx-border-width: 1.2px; -fx-padding: 7 22 7 22;"/>
                <Button text="Update Item"
                        onAction="#handleUpdateItem"
                        style="-fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold', Arial; -fx-font-weight: bold; -fx-text-fill: #232946;
                               -fx-background-color: #e0e1dd; -fx-background-radius: 14px; -fx-border-radius: 14px; -fx-border-color: #e0e1dd;
                               -fx-border-width: 1.2px; -fx-padding: 7 22 7 22;"/>
                <Button text="Delete Item"
                        onAction="#handleDeleteItem"
                        style="-fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold', Arial; -fx-font-weight: bold; -fx-text-fill: #232946;
                               -fx-background-color: #e0e1dd; -fx-background-radius: 14px; -fx-border-radius: 14px; -fx-border-color: #e0e1dd;
                               -fx-border-width: 1.2px; -fx-padding: 7 22 7 22;"/>
                <Button text="View Items"
                        onAction="#handleViewItems"
                        style="-fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold', Arial; -fx-font-weight: bold; -fx-text-fill: #232946;
                               -fx-background-color: #e0e1dd; -fx-background-radius: 14px; -fx-border-radius: 14px; -fx-border-color: #e0e1dd;
                               -fx-border-width: 1.2px; -fx-padding: 7 22 7 22;"/>
                <Button text="Draw Random Dealers"
                        onAction="#handleDrawDealers"
                        style="-fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold', Arial; -fx-font-weight: bold; -fx-text-fill: #232946;
                               -fx-background-color: #e0e1dd; -fx-background-radius: 14px; -fx-border-radius: 14px; -fx-border-color: #e0e1dd;
                               -fx-border-width: 1.2px; -fx-padding: 7 22 7 22;"/>
                <Button text="Refresh"
                        onAction="#handleRefresh"
                        style="-fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold', Arial; -fx-font-weight: bold; -fx-text-fill: #232946;
                               -fx-background-color: #e0e1dd; -fx-background-radius: 14px; -fx-border-radius: 14px; -fx-border-color: #e0e1dd;
                               -fx-border-width: 1.2px; -fx-padding: 7 22 7 22;"/>
            </HBox>

            <HBox alignment="CENTER_LEFT"
                  style="-fx-background-color: #e0e1dd; -fx-padding: 10 24 10 16;">
                <Label text="Low Stock Items:"
                       style="-fx-font-size: 16px; -fx-font-family: Arial, 'Segoe UI Semibold'; -fx-font-weight: bold; -fx-text-fill: #232946;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="itemTable" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="codeColumn" text="Code"/>
                <TableColumn fx:id="nameColumn" text="Name"/>
                <TableColumn fx:id="brandColumn" text="Brand"/>
                <TableColumn fx:id="priceColumn" text="Price (Rs.)"/>
                <TableColumn fx:id="quantityColumn" text="Quantity"/>
                <TableColumn fx:id="categoryColumn" text="Category"/>
                <TableColumn fx:id="dateColumn" text="Purchased Date"/>
                <TableColumn fx:id="thresholdColumn" text="Low Stock Threshold"/>
                <TableColumn fx:id="imageColumn" text="Image"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
