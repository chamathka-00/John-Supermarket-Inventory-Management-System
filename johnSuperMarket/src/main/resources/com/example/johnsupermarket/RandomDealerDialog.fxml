<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.johnsupermarket.controller.RandomDealerDialogController"
      spacing="20" alignment="CENTER" style="-fx-padding: 32;">
    <HBox alignment="CENTER" spacing="0"
          style="-fx-background-color: #e3e6fa; -fx-background-radius: 8; -fx-padding: 12 0 12 0; -fx-effect: dropshadow(two-pass-box, #aaaaaa, 5, 0.1, 0, 2);"
          maxWidth="Infinity">
        <Label text="Randomly Selected Dealers">
            <font>
                <Font name="Arial Bold" size="18"/>
            </font>
        </Label>
    </HBox>

    <TableView fx:id="dealerTable" prefHeight="160" minHeight="160" maxHeight="160"
               VBox.vgrow="NEVER"
               style="-fx-background-radius: 8;">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="contactColumn" text="Contact"/>
            <TableColumn fx:id="locationColumn" text="Location"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <fixedCellSize>30</fixedCellSize>
    </TableView>

    <Label text="Dealer Items:" style="-fx-font-size:15;"/>

    <TableView fx:id="itemTable" prefHeight="120" minHeight="120" maxHeight="120"
               VBox.vgrow="NEVER"
               style="-fx-background-radius: 8;">
        <columns>
            <TableColumn fx:id="itemNameColumn" text="Item Name"/>
            <TableColumn fx:id="itemBrandColumn" text="Brand"/>
            <TableColumn fx:id="itemPriceColumn" text="Price"/>
            <TableColumn fx:id="itemQtyColumn" text="Quantity"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <fixedCellSize>30</fixedCellSize>
    </TableView>

    <Button text="Close" onAction="#handleClose" minWidth="80"/>
</VBox>
