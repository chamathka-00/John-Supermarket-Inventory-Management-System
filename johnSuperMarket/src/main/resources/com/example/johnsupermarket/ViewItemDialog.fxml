<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.Pane?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.johnsupermarket.controller.ViewItemController"
      style="-fx-background-color: #f8fafb; -fx-padding: 24 32 32 32;">

    <HBox alignment="CENTER_LEFT"
          style="-fx-background-color: #e0e1dd; -fx-padding: 11 20; -fx-background-radius: 8 8 0 0;">
        <Label text="Items Details"
               style="-fx-font-size: 20px; -fx-font-family: Arial, 'Segoe UI Semibold';
                      -fx-text-fill: #232946; -fx-font-weight: bold;"/>
    </HBox>

    <HBox spacing="12" alignment="CENTER"
          style="-fx-padding: 12 4 12 6;">
        <Button text="Add Item" onAction="#handleAddItem"
                style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI Semibold', Arial;
                       -fx-font-weight: bold; -fx-text-fill: #232946;
                       -fx-background-color: #edf0f4; -fx-background-radius: 12px;
                       -fx-border-radius: 12px; -fx-border-color: #bfcfe7; -fx-border-width: 1px;
                       -fx-padding: 6 18 6 18;"/>
        <Button text="Update Item" onAction="#handleUpdateItem"
                style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI Semibold', Arial;
                       -fx-font-weight: bold; -fx-text-fill: #232946;
                       -fx-background-color: #edf0f4; -fx-background-radius: 12px;
                       -fx-border-radius: 12px; -fx-border-color: #bfcfe7; -fx-border-width: 1px;
                       -fx-padding: 6 18 6 18;"/>
        <Button text="Delete Item" onAction="#handleDeleteItem"
                style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI Semibold', Arial;
                       -fx-font-weight: bold; -fx-text-fill: #232946;
                       -fx-background-color: #edf0f4; -fx-background-radius: 12px;
                       -fx-border-radius: 12px; -fx-border-color: #bfcfe7; -fx-border-width: 1px;
                       -fx-padding: 6 18 6 18;"/>
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-font-size: 14px; -fx-font-family: 'Segoe UI Semibold', Arial;
                       -fx-font-weight: bold; -fx-text-fill: #232946;
                       -fx-background-color: #edf0f4; -fx-background-radius: 12px;
                       -fx-border-radius: 12px; -fx-border-color: #bfcfe7; -fx-border-width: 1px;
                       -fx-padding: 6 18 6 18;"/>
    </HBox>

    <HBox style="-fx-padding: 2 0 10 0;">
        <Pane HBox.hgrow="ALWAYS"/>
        <VBox spacing="4" alignment="TOP_RIGHT">
            <Label fx:id="countLabel" text="Total Items: 0"
                   style="-fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold', Arial; -fx-font-weight: bold;"/>
            <Label fx:id="valueLabel" text="Total Inventory Value: 0.00"
                   style="-fx-font-size: 15px; -fx-font-family: 'Segoe UI Semibold', Arial; -fx-font-weight: bold;"/>
        </VBox>
    </HBox>

    <TableView fx:id="viewItemTable" VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-table-cell-border-color: #e0e1dd;">
        <columns>
            <TableColumn fx:id="codeColumn" text="Code" prefWidth="130"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="160"/>
            <TableColumn fx:id="brandColumn" text="Brand" prefWidth="100"/>
            <TableColumn fx:id="priceColumn" text="Price (Rs.)" prefWidth="75"/>
            <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="55"/>
            <TableColumn fx:id="dateColumn" text="Purchased Date" prefWidth="110"/>
            <TableColumn fx:id="thresholdColumn" text="Low Stock Threshold" prefWidth="90"/>
            <TableColumn fx:id="imageColumn" text="Image"/>
        </columns>
    </TableView>

</VBox>
