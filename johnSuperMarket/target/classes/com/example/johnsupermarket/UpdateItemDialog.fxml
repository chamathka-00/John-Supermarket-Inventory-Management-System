<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox spacing="24" alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.johnsupermarket.controller.UpdateItemController"
      style="-fx-padding: 32;">

    <HBox alignment="CENTER" spacing="0"
          style="-fx-background-color: #e3e6fa; -fx-background-radius: 8; -fx-padding: 12 0 12 0; -fx-effect: dropshadow(two-pass-box, #aaaaaa, 5, 0.1, 0, 2);"
          maxWidth="Infinity">
        <Label text="Update Item">
            <font>
                <Font name="Arial Bold" size="22"/>
            </font>
        </Label>
    </HBox>

    <GridPane hgap="20" vgap="6" alignment="CENTER" maxWidth="Infinity">
        <columnConstraints>
            <ColumnConstraints minWidth="120"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="220"/>
        </columnConstraints>

        <VBox spacing="2" GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
            <Label text="Item Code:"/>
        </VBox>
        <VBox spacing="2" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <TextField fx:id="codeField" maxWidth="Infinity" editable="false"/>
            <Label fx:id="codeErrorLabel" textFill="red" style="-fx-font-size:11;"/>
        </VBox>

        <VBox spacing="2" GridPane.rowIndex="1" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
            <Label text="Item Name:"/>
        </VBox>
        <VBox spacing="2" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <TextField fx:id="nameField" maxWidth="Infinity"/>
            <Label fx:id="nameErrorLabel" textFill="red" style="-fx-font-size:11;"/>
        </VBox>

        <VBox spacing="2" GridPane.rowIndex="2" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
            <Label text="Brand:"/>
        </VBox>
        <VBox spacing="2" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <TextField fx:id="brandField" maxWidth="Infinity"/>
            <Label fx:id="brandErrorLabel" textFill="red" style="-fx-font-size:11;"/>
        </VBox>

        <VBox spacing="2" GridPane.rowIndex="3" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
            <Label text="Price:"/>
        </VBox>
        <VBox spacing="2" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <TextField fx:id="priceField" maxWidth="Infinity"/>
            <Label fx:id="priceErrorLabel" textFill="red" style="-fx-font-size:11;"/>
        </VBox>

        <VBox spacing="2" GridPane.rowIndex="4" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
            <Label text="Quantity:"/>
        </VBox>
        <VBox spacing="2" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <TextField fx:id="quantityField" maxWidth="Infinity"/>
            <Label fx:id="quantityErrorLabel" textFill="red" style="-fx-font-size:11;"/>
        </VBox>

        <VBox spacing="2" GridPane.rowIndex="5" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
            <Label text="Category:"/>
        </VBox>
        <VBox spacing="2" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <TextField fx:id="categoryField" maxWidth="Infinity"/>
            <Label fx:id="categoryErrorLabel" textFill="red" style="-fx-font-size:11;"/>
        </VBox>

        <VBox spacing="2" GridPane.rowIndex="6" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
            <Label text="Purchased Date:"/>
        </VBox>
        <VBox spacing="2" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <TextField fx:id="dateField" maxWidth="Infinity"/>
            <Label fx:id="dateErrorLabel" textFill="red" style="-fx-font-size:11;"/>
        </VBox>

        <VBox spacing="2" GridPane.rowIndex="7" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
            <Label text="Low Stock Threshold:"/>
        </VBox>
        <VBox spacing="2" GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <TextField fx:id="thresholdField" maxWidth="Infinity"/>
            <Label fx:id="thresholdErrorLabel" textFill="red" style="-fx-font-size:11;"/>
        </VBox>

        <VBox spacing="2" GridPane.rowIndex="8" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
            <Label text="Image:"/>
        </VBox>
        <VBox spacing="2" GridPane.rowIndex="8" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" alignment="CENTER_LEFT">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <TextField fx:id="imageField" editable="false" promptText="Default" maxWidth="Infinity"/>
                <Button text="Browse" onAction="#handleBrowseImage"/>
                <Button text="Clear" onAction="#handleClearImage"/>
            </HBox>
            <Label fx:id="imageErrorLabel" textFill="red" style="-fx-font-size:11;"/>
        </VBox>
    </GridPane>

    <HBox spacing="16" alignment="CENTER">
        <Button text="OK" onAction="#handleOk"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>
